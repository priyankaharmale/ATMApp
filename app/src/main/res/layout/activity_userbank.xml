<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colororange">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Bank Account"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimens_10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cardDetailsPayMoney_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_5dp"
            android:text="Card Number"

            android:textSize="15sp"

            />

        <EditText
            android:id="@+id/et_cardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_5dp"
            android:hint="NA"

            android:inputType="number"
            android:maxLength="19"

            android:padding="10dp"
            android:textColor="@color/coloBlack"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/expiryMonthYearDepositeMoney_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_5dp"

            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/expiryMonthDepositeMoney_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/expiryMonthDepositeMoney_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiration Month"
                    android:textSize="15sp" />

                />

                <EditText
                    android:id="@+id/et_expirymonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="false"
                    android:hint="MM"
                    android:inputType="number"


                    android:padding="10dp"
                    android:textColor="@color/coloBlack"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/expiryYearDepositeMoney_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/expiryYearDepositeMoney_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expiration Year"
                    android:textSize="15sp"


                    />

                <EditText
                    android:id="@+id/et_expiryyear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="false"
                    android:hint="YYYY"
                    android:inputType="number"

                    android:padding="10dp"
                    android:textColor="@color/coloBlack"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/cvvDepositeMoneyHeading_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="CVV"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_cvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="NA"
            android:inputType="numberPassword"

            android:maxLength="3"
            android:padding="10dp"

            android:textColor="@color/coloBlack"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_balance"
            android:layout_marginLeft="@dimen/dimens_20dp"
            android:layout_marginRight="@dimen/dimens_20dp"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:background="@drawable/login_button_bg"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>